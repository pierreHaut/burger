{% extends 'base.html.twig' %}

{% block title %}Nos Burger's{% endblock %}

{% block body %}
    <h1>Burger index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Supp Double</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for burger in burgers %}
            <tr>
                <td>{{ burger.id }}</td>
                <td>{{ burger.name }}</td>
                <td>{{ burger.description }}</td>
                <td>{{ burger.price }}</td>
                <td>{{ burger.suppDouble }}</td>
                <td>
                    <a href="{{ path('burger_show', {'id': burger.id}) }}">Voir</a>
                    <a href="{{ path('burger_edit', {'id': burger.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('burger_new') }}" class="btn btn-primary">Nouveau</a><br/>
{% endblock %}
